<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b4b28a"

    >


    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="66dp"
        android:text="pealse fill in some setails below"
        android:textSize="17dp"
        android:textStyle="bold"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="first name"
        android:layout_marginStart="55dp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        />

    <EditText
        android:id="@+id/ed_firstname"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"



        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="last name"

        android:layout_marginStart="55dp"
        android:textStyle="bold"
        android:layout_marginTop="21dp"
        />
    <EditText

        android:id="@+id/ed_lastname"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"


        />










    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"

        android:layout_marginStart="55dp"
        android:textStyle="bold"
        android:layout_marginTop="21dp"
        />

    <EditText
        android:layout_width="304dp"
        android:id="@+id/ed_email"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"



        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="password"

        android:layout_marginStart="55dp"
        android:textStyle="bold"
        android:layout_marginTop="21dp"
        />
    <EditText
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:password="true"
        android:id="@+id/ed_password"


        />







    <Button


        android:id="@+id/endsignup"
        android:layout_width="107dp"
        android:layout_height="61dp"
        android:layout_marginTop="55dp"
        android:backgroundTint="#b4b28a"

        android:drawableLeft="@drawable/next"
        android:layout_marginStart="244dp"

        />


</LinearLayout>